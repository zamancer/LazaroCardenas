{
  "name": "Credential",
  "base": "User",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "name": {
      "type": "string"
    },
    "lastName": {
      "type": "string"
    },
    "birthDate": {
      "type": "string"
    },
    "address1": {
      "type": "string"
    },
    "address2": {
      "type": "string"
    },
    "city": {
      "type": "string"
    },
    "state": {
      "type": "string"
    },
    "country": {
      "type": "string"
    },
    "active": {
      "type": "boolean",
      "default": true
    },
    "ownerType": {
      "type": "string"
    },
    "ownerId": {
      "type": "number"
    }
  },
  "validations": [],
  "relations": {
    "owner": {
      "type": "belongsTo",
      "polymorphic": true
    }
  },
  "acls": [],
  "methods": {
    "register": {
      "accepts": [
        {
          "arg": "userAccount",
          "type": "object",
          "required": true,
          "http": {
            "source": "body"
          },
          "description": "The details for the new user"
        }
      ],
      "returns": [
        {
          "arg": "credential",
          "type": "object",
          "root": true,
          "description": "The credential object for the newly created user"
        }
      ],
      "description": "Registers a new user Credential",
      "http": [
        {
          "path": "/register",
          "verb": "post"
        }
      ]
    }
  }
}
